#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;


// Функция для поворота изображения
void RotateBitmap(Graphics::TBitmap *bmp, int angle) {
	// Создание нового битмапа для поворота
    Graphics::TBitmap *rotated = new Graphics::TBitmap();
    rotated->SetSize(bmp->Height, bmp->Width); // Повернутое изображение будет иметь размеры, измененные местами

    rotated->Canvas->Brush->Color = clWhite; // Фон при необходимости
    rotated->Canvas->FillRect(Rect(0, 0, rotated->Width, rotated->Height));

    // Поворот изображения
    rotated->Canvas->Draw(-bmp->Width / 2, -bmp->Height / 2, bmp);
    rotated->Canvas->Rotate(angle); // Задаем угол поворота

    bmp->Assign(rotated); // Назначаем исходному изображению повернутый вариант
    delete rotated;       // Удаляем временный битмап
}

