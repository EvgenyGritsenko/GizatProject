#include "Unit11.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm11 *Form11;
//---------------------------------------------------------------------------
__fastcall TForm11::TForm11(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm11::Button1Click(TObject *Sender)
{
    int num1 = StrToInt(EditNum1->Text);
    int num2 = StrToInt(EditNum2->Text);
    int result = MultiplyNumbers(num1, num2);  // Вызов функции умножения
    LabelResult->Caption = "Результат: " + IntToStr(result);
}
