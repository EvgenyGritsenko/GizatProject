//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "Form2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::N4Click(TObject *Sender)
{
    // Создание формы, которая откроется при нажатии
    Form2 *form = new Form2(this);

    // Открытие формы как модальное окно
    form->ShowModal();

    // Удаление формы после закрытия
	delete form;
}
//---------------------------------------------------------------------------
